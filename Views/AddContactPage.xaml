<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM_Contact_App.Views.AddContactPage"
             Title="Add Contact">
    <ScrollView>
        <VerticalStackLayout Padding="10">
            <Entry Placeholder="Name" Text="{Binding Name}" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Phone Number" Text="{Binding PhoneNumber}" />
            <Editor Placeholder="Description" Text="{Binding Description}" />
            <Button Text="Save" Clicked="OnSaveClicked" Margin="10" />
            <Button Text="View Contacts" Clicked="OnViewContactsClicked" Margin="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
